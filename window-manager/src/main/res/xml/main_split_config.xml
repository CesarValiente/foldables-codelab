<?xml version="1.0" encoding="utf-8"?><!-- The split configuration for activities. -->
<resources xmlns:window="http://schemas.android.com/apk/res-auto">

    <!--This is the initial test scenario that we will see after clicking
    on EmbeddingActivities button.
    Automatically launch a placeholder for the list activity. -->
    <SplitPlaceholderRule
        window:finishPrimaryWithSecondary="adjacent"
        window:placeholderActivityName="com.codelab.foldables.window_manager.embedding.ActivityC"
        window:splitMinWidth="537dp"
        window:splitRatio="0.5"
        window:stickyPlaceholder="true">
        <ActivityFilter window:activityName="com.codelab.foldables.window_manager.embedding.ActivityA" />
    </SplitPlaceholderRule>

    <!-- Automatically split the following activity pairs. -->
    <SplitPairRule
        window:finishPrimaryWithSecondary="always"
        window:finishSecondaryWithPrimary="adjacent"
        window:splitLayoutDirection="ltr"
        window:splitMinWidth="537dp"
        window:splitRatio="0.5">
        <SplitPairFilter
            window:primaryActivityName="com.codelab.foldables.window_manager.embedding.ActivityA"
            window:secondaryActivityName="com.codelab.foldables.window_manager.embedding.ActivityB" />
        <SplitPairFilter
            window:primaryActivityName="*"
            window:secondaryActivityAction="android.intent.action.VIEW"
            window:secondaryActivityName="*/*" />
    </SplitPairRule>
</resources>